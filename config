# Mod key
set $mod Mod4

# use these keys for focus, movement, and resize directions when reaching for
# the arrows is not convenient
set $up j
set $down k
set $left h
set $right l

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod


# kill focused window
bindsym $mod+Shift+q kill

# Lock screen (i3lock-color + blur)
bindsym $mod+Ctrl+l exec i3lock --blur=8 --clock --time-size=80 --time-font="JetBrains Mono" --date-font="JetBrains Mono" --date-size=20 --time-color=7dcfff --date-color=7dcfff



